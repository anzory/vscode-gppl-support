{
  "name": "vscode-gppl-support",
  "displayName": "SolidCAM postprocessor editor",
  "description": "Full SolidCAM GPP language support for VSCode: highlighting, formatting, autocomplete, code snippets and more. Write your postprocessor for SolidCAM like a pro.",
  "version": "1.6.0",
  "preview": false,
  "license": "MIT",
  "publisher": "anzory",
  "author": "Andrey Zorin",
  "copyright": "Copyright (c) 2021 Andrey Zorin",
  "engines": {
    "vscode": "^1.60.2"
  },
  "keywords": [
    "gpp",
    "gppl",
    "SolidCAM",
    "postprocessor",
    "syntax",
    "highlighter",
    "formatting"
  ],
  "icon": "images/new-logo.png",
  "galleryBanner": {
    "color": "#666666",
    "theme": "dark"
  },
  "markdown": "github",
  "repository": {
    "type": "git",
    "url": "https://github.com/anzory/vscode-gppl-support.git"
  },
  "homepage": "https://github.com/anzory/vscode-gppl-support",
  "bugs": {
    "url": "https://github.com/anzory/vscode-gppl-support/issues"
  },
  "categories": [
    "Extension Packs",
    "Language Packs",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:gppl"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "languages": [
      {
        "id": "gppl",
        "aliases": [
          "GPPL"
        ],
        "extensions": [
          ".gpp"
        ],
        "configuration": "./languages/gppl/gppl-language.json"
      },
      {
        "id": "gcode",
        "aliases": [
          "GCode"
        ],
        "extensions": [
          ".nc"
        ],
        "configuration": "./languages/gcode/gcode-language.json"
      }
    ],
    "grammars": [
      {
        "language": "gppl",
        "scopeName": "source.gppl",
        "path": "./languages/gppl/gppl.tmLanguage.json"
      },
      {
        "language": "gcode",
        "scopeName": "source.gcode",
        "path": "./languages/gcode/gcode.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gppl",
        "path": "./languages/gppl/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "GPPL",
      "properties": {
        "gppl.files.encoding": {
          "type": "string",
          "default": "windows1251",
          "description": "Default GPPL files encoding",
          "scope": "window"
        },
        "gppl.editor.defaultFormatter": {
          "type": "string",
          "default": "anzory.vscode-gppl-support",
          "description": "Default GPPL files formatter",
          "scope": "window"
        },
        "gppl.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Allows you to format GPPL documents",
          "scope": "window"
        },
        "gppl.format.tabSize": {
          "type": "number",
          "default": 2,
          "description": "Size of a tab in spaces for the formatter",
          "scope": "window"
        },
        "gppl.format.preferSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Prefer spaces over tabs",
          "scope": "window"
        },
        "gppl.format.insertSpacesAroundEqualSign": {
          "type": "boolean",
          "default": true,
          "description": "Determines whether spaces should be inserted before and after the `equal` sign",
          "scope": "window"
        },
        "gppl.format.applyIndentsToRegions": {
          "type": "boolean",
          "default": true,
          "description": "Determines whether indents should be applied to `#regions`",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gppl",
          "title": "GPPL",
          "icon": "./images/new-logo.svg",
          "when": "view == gppl.ProceduresTree"
        }
      ]
    },
    "views": {
      "gppl": [
        {
          "id": "gppl.ProceduresTree",
          "name": "Procedures Tree",
          "contextualTitle": "GPPL Procedures Tree",
          "when": "gpplProceduresTreeViewEnabled !== true",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "gppl.ProceduresTree",
        "contents": "GPPL Tree only available when viewing GPPL",
        "when": "gpplProceduresTreeViewEnabled !== true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gppl.ProceduresTree.RefreshTree",
          "when": "view == gppl.ProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gppl.ProceduresTree.SortByAZ",
          "when": "view == gppl.ProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gppl.ProceduresTree.SortByZA",
          "when": "view == gppl.ProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gppl.ProceduresTree.SortByDefault",
          "when": "view == gppl.ProceduresTree",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
          "command": "gppl.editor.Format",
          "when": "editorHasDocumentFormattingProvider"
        }
      ]
    },
    "commands": [
      {
        "command": "gppl.ProceduresTree.RefreshTree",
        "title": "Refresh Tree",
        "icon": {
          "light": "images/icons/arrow-clockwise.svg",
          "dark": "images/icons/arrow-clockwise-dark.svg"
        }
      },
      {
        "command": "gppl.ProceduresTree.Selection",
        "title": "Procedure Selection"
      },
      {
        "command": "gppl.ProceduresTree.SortByAZ",
        "title": "Sort By A-Z",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-up.svg",
          "dark": "images/icons/sort-up-dark.svg"
        }
      },
      {
        "command": "gppl.ProceduresTree.SortByZA",
        "title": "Sort By Z-A",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-down.svg",
          "dark": "images/icons/sort-down-dark.svg"
        }
      },
      {
        "command": "gppl.ProceduresTree.SortByDefault",
        "title": "Sort By Default",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-up-down.svg",
          "dark": "images/icons/sort-up-down-dark.svg"
        }
      },
      {
        "command": "gppl.editor.Format",
        "title": "Format Document",
        "category": "formatting",
        "icon": {
          "light": "images/icons/text-indent-left.svg",
          "dark": "images/icons/text-indent-left-dark.svg"
        }
      }
    ]
  },
  "scripts": {
    "vsce:package": "npm run vscode:prepublish && cd dist && vsce package",
    "clean": "rimraf dist src/out out",
    "webpack:dev": "webpack --mode=development --devtool=eval-source-map",
    "webpack:prod": "webpack --mode=production",
    "vscode:prepublish": "npm run lint && npm run clean && npm run webpack:prod",
    "tsc:compile": "tsc -b",
    "tsc:watch": "tsc -b -w",
    "lint": "eslint src --ext .ts,.tsx",
    "prelaunch": "npm run clean && npm run webpack:dev"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.6",
    "@types/vscode": "^1.60.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^7.32.0",
    "fs": "^0.0.1-security",
    "glob": "^7.2.0",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "vsce": "^1.100.0",
    "vscode-test": "^1.6.1",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0"
  }
}
