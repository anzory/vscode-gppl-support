{
  "name": "vscode-gpp-support",
  "displayName": "Full GPP Language Support",
  "description": "Full GPP language support for VSCode: highlighting, formatting, autocomplete, code snippets and more.",
  "version": "1.4.1",
  "license": "MIT",
  "publisher": "anzory",
  "author": "Andrey Zorin",
  "copyright": "Copyright (c) 2021 Andrey Zorin",
  "engines": {
    "vscode": "^1.55.0"
  },
  "keywords": [
    "gpp",
    "gpp",
    "SolidCAM",
    "syntax",
    "highlighter",
    "formatting"
  ],
  "icon": "images/new-logo.png",
  "galleryBanner": {
    "color": "#666666",
    "theme": "dark"
  },
  "markdown": "github",
  "repository": {
    "type": "git",
    "url": "https://github.com/anzory/vscode-gpp-support.git"
  },
  "homepage": "https://github.com/anzory/vscode-gpp-support",
  "bugs": {
    "url": "https://github.com/anzory/vscode-gpp-support/issues"
  },
  "categories": [
    "Extension Packs",
    "Language Packs",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:gpp",
    "onView:gpp.ProceduresTree"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "languages": [
      {
        "id": "gpp",
        "aliases": [
          "GPP"
        ],
        "extensions": [
          ".gpp"
        ],
        "configuration": "./languages/gpp/gpp-language.json"
      },
      {
        "id": "gcode",
        "aliases": [
          "GCode"
        ],
        "extensions": [
          ".nc"
        ],
        "configuration": "./languages/gcode/gcode-language.json"
      }
    ],
    "grammars": [
      {
        "language": "gpp",
        "scopeName": "source.gpp",
        "path": "./languages/gpp/gpp.tmLanguage.json"
      },
      {
        "language": "gcode",
        "scopeName": "source.gcode",
        "path": "./languages/gcode/gcode.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gpp",
        "path": "./languages/gpp/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "GPP",
      "properties": {
        "gpp.files.encoding": {
          "type": "string",
          "default": "windows1251",
          "description": "Default GPPL files encoding",
          "scope": "window"
        },
        "gpp.editor.defaultFormatter": {
          "type": "string",
          "default": "anzory.vscode-gpp-support",
          "description": "Default GPPL files formatter",
          "scope": "window"
        },
        "gpp.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Allows you to format GPPL documents",
          "scope": "window"
        },
        "gpp.format.tabSize": {
          "type": "number",
          "default": 2,
          "description": "Size of a tab in spaces for the formatter",
          "scope": "window"
        },
        "gpp.format.insertSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Prefer spaces over tabs",
          "scope": "window"
        },
        "gpp.format.insertSpacesAroundEqualSign": {
          "type": "boolean",
          "default": true,
          "description": "Determines whether spaces should be inserted before and after the `equal` sign",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gpp",
          "title": "GPP",
          "icon": "./images/new-logo.svg",
          "when": "view == gpp.ProceduresTree"
        }
      ]
    },
    "views": {
      "gpp": [
        {
          "id": "gpp.ProceduresTree",
          "name": "Procedures Tree",
          "contextualTitle": "GPPL Procedures Tree",
          "when": "gppProceduresTreeViewEnabled !== true",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "gpp.ProceduresTree",
        "contents": "GPPL Tree only available when viewing GPPL",
        "when": "gppProceduresTreeViewEnabled !== true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gpp.ProceduresTree.RefreshTree",
          "when": "view == gpp.ProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gpp.ProceduresTree.SortByAZ",
          "when": "view == gpp.ProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gpp.ProceduresTree.SortByZA",
          "when": "view == gpp.ProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gpp.ProceduresTree.SortByDefault",
          "when": "view == gpp.ProceduresTree",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
          "command": "gpp.Editor.Format",
          "when": "editorHasDocumentFormattingProvider"
        }
      ]
    },
    "commands": [
      {
        "command": "gpp.ProceduresTree.RefreshTree",
        "title": "Refresh Tree",
        "icon": {
          "light": "images/icons/arrow-clockwise.svg",
          "dark": "images/icons/arrow-clockwise-dark.svg"
        }
      },
      {
        "command": "gpp.ProceduresTree.Selection",
        "title": "Procedure Selection"
      },
      {
        "command": "gpp.ProceduresTree.SortByAZ",
        "title": "Sort By A-Z",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-up.svg",
          "dark": "images/icons/sort-up-dark.svg"
        }
      },
      {
        "command": "gpp.ProceduresTree.SortByZA",
        "title": "Sort By Z-A",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-down.svg",
          "dark": "images/icons/sort-down-dark.svg"
        }
      },
      {
        "command": "gpp.ProceduresTree.SortByDefault",
        "title": "Sort By Default",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-up-down.svg",
          "dark": "images/icons/sort-up-down-dark.svg"
        }
      },
      {
        "command": "gpp.Editor.Format",
        "title": "Format Document",
        "category": "formatting",
        "icon": {
          "light": "images/icons/text-indent-left.svg",
          "dark": "images/icons/text-indent-left-dark.svg"
        }
      }
    ]
  },
  "scripts": {
    "vsce-package": "npm run vscode:prepublish && cd dist && vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode=development",
    "watch": "webpack --watch --mode=development",
    "package": "webpack --mode=production",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/clean-webpack-plugin": "^0.1.3",
    "@types/copy-webpack-plugin": "^6.4.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.55.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^7.24.0",
    "fs": "^0.0.1-security",
    "glob": "^7.1.6",
    "json-minimizer-webpack-plugin": "^2.1.0",
    "mocha": "^8.3.2",
    "rxjs": "^6.6.7",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "vsce": "^1.87.1",
    "vscode-test": "^1.5.2",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0"
  }
}
