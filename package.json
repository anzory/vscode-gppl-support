{
  "name": "vscode-gppl-support",
  "displayName": "vscode-gppl-support",
  "description": "Full GPPL language support for VSCode: highlighting, formatting, autocomplete and code snippets.",
  "version": "1.3.2",
  "license": "MIT",
  "publisher": "anzory",
  "author": {
    "name": "Andrey Zorin"
  },
  "copyright": "Copyright (c) 2021 Andrey Zorin",
  "engines": {
    "vscode": "^1.54.0"
  },
  "keywords": [
    "gpp",
    "gppl",
    "SolidCAM",
    "syntax",
    "highlighter",
    "formatting"
  ],
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#666666",
    "theme": "dark"
  },
  "markdown": "github",
  "repository": {
    "type": "git",
    "url": "https://github.com/anzory/vscode-gppl-support.git"
  },
  "homepage": "https://github.com/anzory/vscode-gppl-support",
  "bugs": {
    "url": "https://github.com/anzory/vscode-gppl-support/issues"
  },
  "categories": [
    "Extension Packs",
    "Language Packs",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:gppl",
    "onView:gppl.gpplProceduresTree"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "languages": [
      {
        "id": "gppl",
        "aliases": [
          "GPPL"
        ],
        "extensions": [
          ".gpp"
        ],
        "configuration": "./language/gppl/language.json"
      }
    ],
    "grammars": [
      {
        "language": "gppl",
        "scopeName": "source.gppl",
        "path": "./language/gppl/tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gppl",
        "path": "./language/gppl/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "GPPL",
      "properties": {
        "gppl.files.encoding": {
          "type": "string",
          "default": "windows1251",
          "description": "Default GPPL files encoding",
          "scope": "window"
        },
        "gppl.editor.defaultFormatter": {
          "type": "string",
          "default": "anzory.vscode-gppl-support",
          "description": "Default GPPL files formatter",
          "scope": "window"
        },
        "gppl.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Allows you to format GPPL documents",
          "scope": "window"
        },
        "gppl.format.tabSize": {
          "type": "number",
          "default": 2,
          "description": "Size of a tab in spaces for the formatter",
          "scope": "window"
        },
        "gppl.format.insertSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Prefer spaces over tabs",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gppl",
          "title": "GPPL",
          "icon": "./images/icon.ico"
        }
      ]
    },
    "views": {
      "gppl": [
        {
          "id": "gppl.gpplProceduresTree",
          "name": "Procedures Tree",
          "contextualTitle": "GPPL Procedures Tree",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "gppl.gpplProceduresTree",
        "contents": "GPPL Tree only available when viewing GPPL",
        "when": "gpplProceduresTreeViewEnabled !== true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gppl.gpplProceduresTree.RefreshTree",
          "when": "view == gppl.gpplProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gppl.gpplProceduresTree.SortByAZ",
          "when": "view == gppl.gpplProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gppl.gpplProceduresTree.SortByZA",
          "when": "view == gppl.gpplProceduresTree",
          "group": "navigation"
        },
        {
          "command": "gppl.gpplProceduresTree.SortByDefault",
          "when": "view == gppl.gpplProceduresTree",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "gppl.gpplProceduresTree.RefreshTree",
        "title": "Refresh Tree",
        "icon": {
          "light": "images/icons/arrow-clockwise.svg",
          "dark": "images/icons/arrow-clockwise-dark.svg"
        }
      },
      {
        "command": "gppl.gpplProceduresTree.Selection",
        "title": "Procedure Selection"
      },
      {
        "command": "gppl.gpplProceduresTree.SortByAZ",
        "title": "Sort By A-Z",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-up.svg",
          "dark": "images/icons/sort-up-dark.svg"
        }
      },
      {
        "command": "gppl.gpplProceduresTree.SortByZA",
        "title": "Sort By Z-A",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-down.svg",
          "dark": "images/icons/sort-down-dark.svg"
        }
      },
      {
        "command": "gppl.gpplProceduresTree.SortByDefault",
        "title": "Sort By Default",
        "category": "sorting",
        "icon": {
          "light": "images/icons/sort-up-down.svg",
          "dark": "images/icons/sort-up-down-dark.svg"
        }
      }
    ]
  },
  "scripts": {
    "vsce-package": "npm run vscode:prepublish && cd dist && vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode=development",
    "watch": "webpack --watch --mode=development",
    "package": "webpack --mode=production",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/clean-webpack-plugin": "^0.1.3",
    "@types/copy-webpack-plugin": "^6.4.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@types/vscode": "^1.54.0",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.0",
    "eslint": "^7.22.0",
    "fs": "^0.0.1-security",
    "glob": "^7.1.6",
    "json-minimizer-webpack-plugin": "^2.1.0",
    "mocha": "^8.3.2",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "vsce": "^1.87.0",
    "vscode-test": "^1.5.1",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0"
  }
}
