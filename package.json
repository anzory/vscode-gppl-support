{
  "name": "vscode-gppl-support",
  "displayName": "SolidCAM postprocessor editor",
  "description": "Full SolidCAM GPP language support for VSCode: highlighting, formatting, autocomplete, code lens, code snippets and more. Write your postprocessor for SolidCAM like a pro.",
  "version": "1.8.0",
  "preview": false,
  "license": "MIT",
  "publisher": "anzory",
  "author": "Andrey Zorin",
  "copyright": "Copyright (c) 2026 Andrey Zorin",
  "engines": {
    "vscode": "^1.105.0"
  },
  "keywords": [
    "gpp",
    "gppl",
    "SolidCAM",
    "postprocessor",
    "syntax",
    "highlighter",
    "formatting"
  ],
  "icon": "./images/new-logo.png",
  "galleryBanner": {
    "color": "#666666",
    "theme": "dark"
  },
  "markdown": "github",
  "repository": {
    "type": "git",
    "url": "https://github.com/anzory/vscode-gppl-support.git"
  },
  "homepage": "https://github.com/anzory/vscode-gppl-support",
  "bugs": {
    "url": "https://github.com/anzory/vscode-gppl-support/issues"
  },
  "categories": [
    "Extension Packs",
    "Language Packs",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "languages": [
      {
        "id": "gpp",
        "aliases": [
          "GPPL"
        ],
        "extensions": [
          ".gpp"
        ],
        "icon": {
          "light": "./images/gpp-logo.png",
          "dark": "./images/gpp-logo.png"
        },
        "configuration": "./languages/gpp/gpp-language.json"
      },
      {
        "id": "gcode",
        "aliases": [
          "GCode"
        ],
        "extensions": [
          ".nc"
        ],
        "configuration": "./languages/gcode/gcode-language.json"
      }
    ],
    "grammars": [
      {
        "language": "gpp",
        "scopeName": "source.gpp",
        "path": "./languages/gpp/gpp.tmLanguage.json"
      },
      {
        "language": "gcode",
        "scopeName": "source.gcode",
        "path": "./languages/gcode/gcode.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gpp",
        "path": "./languages/gpp/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SolidCAM GPP",
      "properties": {
        "gpp.files.encoding": {
          "type": "string",
          "default": "windows1251",
          "description": "Default GPPL files encoding",
          "scope": "window"
        },
        "gpp.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Allows you to format GPPL documents",
          "scope": "window"
        },
        "gpp.format.tabSize": {
          "type": "number",
          "default": 2,
          "description": "Size of a tab in spaces for the formatter",
          "scope": "window"
        },
        "gpp.format.preferSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Prefer spaces over tabs",
          "scope": "window"
        },
        "gpp.format.applyIndentsToRegions": {
          "type": "boolean",
          "default": true,
          "description": "Determines whether indents should be applied to `#regions`",
          "scope": "window"
        },
        "gpp.localization.defaultLocale": {
          "type": "string",
          "enum": [
            "en",
            "ru"
          ],
          "default": "en",
          "description": "Determines which language to use for messages",
          "scope": "window"
        },
        "gpp.outline.showSymbolDetail": {
          "type": "boolean",
          "default": true,
          "description": "Show call count in document outline symbol detail",
          "scope": "window"
        }
      }
    },
    "menus": {
      "editor/title/run": [
        {
          "command": "gpp.editor.Format",
          "when": "editorHasDocumentFormattingProvider"
        }
      ]
    },
    "commands": [
      {
        "command": "gpp.editor.Format",
        "title": "Format Document",
        "category": "formatting",
        "icon": {
          "light": "images/icons/text-indent-left.svg",
          "dark": "images/icons/text-indent-left-dark.svg"
        }
      },
      {
        "command": "gpp.editor.ShowProcedureReferences",
        "title": "Show Procedure References",
        "category": "navigation"
      }
    ]
  },
  "scripts": {
    "vsce:package": "npm run vscode:prepublish && cd dist && vsce package",
    "clean:dist": "rimraf dist src/out out",
    "webpack:dev": "webpack-cli --mode=development --devtool=eval-source-map",
    "webpack:prod": "webpack-cli --mode=production",
    "vscode:prepublish": "npm run clean:dist && npm run webpack:prod",
    "tsc:compile": "tsc -b",
    "tsc:watch": "tsc -b -w",
    "lint": "eslint src --ext .ts,.tsx",
    "prelaunch": "npm run clean:dist && npm run webpack:dev"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/i18n": "^0.13.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.7",
    "@types/vscode": "^1.108.1",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.32.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.39.2",
    "fs": "^0.0.1-security",
    "glob": "^11.1.0",
    "i18n": "^0.15.3",
    "rimraf": "^6.1.2",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^5.1.4"
  }
}