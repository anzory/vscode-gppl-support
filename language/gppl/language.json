{
  "comments": {
    "blockComment": "",
    "lineComment": ";"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["'", "'"],
    [";*", "\n;*"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["'", "'"]
  ],
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\"\\,\\.\\<\\>\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": {
      "pattern": "(^\\s*(if|else|elseif|while))|(@.*$)"
    },
    "decreaseIndentPattern": {
      "pattern": "(^\\s*(endif|endw))|(endp)"
    }
  }
}
