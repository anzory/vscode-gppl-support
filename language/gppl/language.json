{
  "comments": {
    "blockComment": "",
    "lineComment": ";"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "wordPattern": "(-?\\d+\\.\\d+)|(-?\\d+\\.?)|(@\\w+)|(\\w+)",
  "indentationRules": {
    "increaseIndentPattern": {
      "pattern": "(if|else|elseif|while)|(@.*$)"
    },
    "decreaseIndentPattern": {
      "pattern": "(else|elseif|endif|endw)|(endp)"
    }
  }
}
